<div>
  <div>Edit Movie</div>
  <div>
    <form accept-charset="UTF-8" action="/movies/update/<%= @movie.id %>" data-remote="true" method="post">
      <label>Name:</label>
      <input type="text" name="movie[name]" value="<%= @movie.name %>"/><br>
      <label>Rating:</label>
      <select name="movie[rat]" value="<%= @movie.rat %>">
        <option value="-">-</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NC-17">NC-17</option>
      </select><br>
      <label>Release date:</label>
      <input type="date" name="movie[re]" value="<%= @movie.re %>"/><br>
      <label>Genre:</label>
      <input type="text" name="movie[gen]" value="<%= @movie.gen %>"/><br>
      <label>Length:</label>
      <input type="text" name="movie[len]" value="<%= @movie.len %>"/><br>
      <label>Descriptions:</label>
      <textarea name="movie[des]" rows="4" cols="50"><%= @movie.des %></textarea><br>
      <a class="btn_link" href=<%=movie_path(@movie)%>>Cancel</a>
      <input type="submit" value="Submit">
    </form>
  </div>
</div>
