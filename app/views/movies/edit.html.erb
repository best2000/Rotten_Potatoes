<div>
  <div><b>Edit Movie</b></div>
  <div>
    <form accept-charset="UTF-8" action="/movies/update/<%= @movie.id %>" data-remote="true" method="post">
      <label>Name:</label>
      <input type="text" name="movie[name]" value="<%= @movie.name %>"/><br>
      <label>Rating:</label>
      <select name="movie[rat]" value="<%= @movie.rat %>">
        <option value="-">-</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NC-17">NC-17</option>
      </select><br>
      <label>Release date:</label>
      <input type="date" name="movie[re]" value="<%= @movie.re %>"/><br>
      <label>Genre:</label>
      <input type="text" name="movie[gen]" value="<%= @movie.gen %>"/><br>
      <label>Length:</label>
      <input type="text" name="movie[len]" value="<%= @movie.len %>"/><br>
      <div class="des_div" style="border: 0px; padding: 0px; margin-bottom: 5px;">
        <label>Descriptions:</label>
        <textarea name="movie[des]" rows="7" cols="100"><%= @movie.des %></textarea>
      </div>
      <a class="btn_link" style="background-color:rgb(255, 176, 148)" href=<%=movie_path(@movie)%> >Cancel</a>
      <input type="submit" value="Submit" style="background-color:rgb(145, 255, 145)">
    </form>
  </div>
</div>

<%= stylesheet_link_tag "form" %>